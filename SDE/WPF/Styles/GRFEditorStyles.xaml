        <Setter Property="Background" Value="Blue" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TabItem}">
                    <Grid x:Name="Grid">
                        <Border x:Name="Border" Margin="-1,0,0,0" Background="#F8F8F8" BorderBrush="#CED6E3" BorderThickness="1,1,1,0">
